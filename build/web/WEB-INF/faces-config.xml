<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <navigation-rule>
        <navigation-case>
            <from-outcome>deleteTask</from-outcome>
            <to-view-id>/task/secure/delete.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>

        <navigation-case>
            <from-outcome>editTask</from-outcome>
            <to-view-id>/task/secure/edit.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>

        <navigation-case>
            <from-outcome>addTask</from-outcome>
            <to-view-id>/task/secure/add.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>

         <navigation-case>
            <from-outcome>listTask</from-outcome>
            <to-view-id>/task/list.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>

         <navigation-case>
            <from-outcome>homePage</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>

          <navigation-case>
            <from-outcome>loginPage</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
                
        </navigation-case>

    </navigation-rule>



</faces-config>
